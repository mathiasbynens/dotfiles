#
# Highlights make output.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

function make {
  if zstyle -t ':prezto:module:utility:make' color; then
    if (( $+commands[colormake] )); then
      colormake "$@"
    else
      command make "$@"
    fi
  else
    command make "$@"
  fi
}

make "$@"
