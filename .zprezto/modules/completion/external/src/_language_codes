    'zu:Zulu'
  )
  _describe -t language-codes 'ISO 639-1 language code' codes "$@"
}

_language_codes() {
  local command="$argv[$#]" ret=1

  case $command in
    ISO-639-1)
	  _language_codes_${${command//-/_}:l} "${@[1,-2]}" && ret=0
      ;;
    *)
      _message "unknown command: $command"
      ;;
  esac

  return ret    
}

