#
# Shortens GitHub URLs.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

local url="$1"

if [[ "$url" == '-' ]]; then
  read url <&0
fi

if [[ -z "$url" ]]; then
  print "usage: $0 [ url | - ]" >&2
fi

if (( $+commands[curl] )); then
  curl -s -i 'http://git.io' -F "url=$url" | grep 'Location:' | sed 's/Location: //'
else
  print "$0: command not found: curl" >&2
fi
