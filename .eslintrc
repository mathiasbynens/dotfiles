{
    "env": {
        "browser": true,
        "amd": true
    },
    "globals": {
        "$": false
    },
    "rules": {
        "block-scoped-var": 2,
        "curly": [2, "all"],
        "dot-notation": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-caller": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-fallthrough": 2,
        "no-implied-eval": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-unused-expressions": 2,
        "no-with": 2,
        "radix": 2,
        "wrap-iife": 2,
        "yoda": [1, "never"],

        "no-catch-shadow": 2,
        "no-delete-var": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-unused-vars": 2,
        "no-use-before-define": 2,

        "no-cond-assign": 2,
        "no-constant-condition": 2,
        "no-comma-dangle": 2,
        "no-dupe-keys": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        // "no-extra-parens": 2,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-typeof": 2,

        "brace-style": [2, "1tbs"],
        "camelcase": 2,
        "consistent-this": [1, "that"],
        "new-cap": 2,
        "no-nested-ternary": 2,
        "no-lonely-if": 2,
        "no-spaced-func": 2,
        "no-space-before-semi": 2,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 0,
        "no-wrap-func": 2,
        "no-mixed-spaces-and-tabs": [2, true],
        "space-after-keywords": [2, "always"],
        "space-in-brackets": [2, "never"],
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "space-unary-word-ops": 2,

        "quotes": [2, "single"],
        "no-warning-comments": [1, {"terms": ["fixme"], "location": "anywhere"}]
    }
}
