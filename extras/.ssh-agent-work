#echo "SSH AGENT PROCESS"

if [ -n "$HOME" ]; then
    #echo "Using $HOME as V_USERHOME"
    V_USERHOME=$HOME
elif [ -n "$HOMEPATH" ]; then
	#echo "Using $HOMEPATH as V_USERHOME"
	V_USERHOME=$HOMEPATH
fi

SSH_ENV=$V_USERHOME/.ssh/environment
 
function start_agent {
# start the ssh-agent
    echo "Initializing new SSH agent..."
    # spawn ssh-agent
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    /usr/bin/ssh-add
    /usr/bin/ssh-add ~/.ssh/puppet_id_rsa
    /usr/bin/ssh-add ~/.ssh/id_rsa_github
}

if [ -f "${SSH_ENV}" ]; then
     . "${SSH_ENV}" > /dev/null
	 ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
	    start_agent;
	}
else
    start_agent;
fi