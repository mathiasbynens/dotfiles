#!/bin/bash

brew update
brew upgrade

# OSX related
brew install m-cli    
brew install mas      # cli App store

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils

brew install git
brew install diff-so-fancy

brew install node
brew install go
brew install jq 
brew install lnav # logs browsing
brew install cloc

brew install htop

brew install wget --enable-iri
brew install youtube-dl
brew install nload
brew install mtr
brew install wrk
brew install httpie

brew install kubectx
brew install kube-ps1
brew tap wagoodman/dive
brew install dive       # explore docker container layers

brew install gnupg
brew install findutils  # GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed 
brew install rename
brew install tree
brew install fpp
brew install ripgrep    
brew install fd         # enhanced find
brew install bat        # enhanced cat
brew install exa        # enhanced ls

brew tap caskroom/cask
brew install --cask vlc
brew install --cask google-chrome
brew install --cask firefox
brew install --cask slack
brew install --cask telegram
brew install --cask iterm2
brew install --cask sequel-pro
brew install --cask visual-studio-code

