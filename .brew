#!/bin/bash

brew update
brew upgrade

# OSX related
brew install m-cli    
brew install mas      # cli App store

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils

# Install wget with IRI support
brew install wget --enable-iri

# Install everything else
brew install git
brew install diff-so-fancy

brew install node
brew install go
brew install jq 
brew install lnav # logs browsing
brew install cloc

brew install htop

brew install wget
brew install nload
brew install mtr
brew install wrk
brew install httpie

brew install kubectx
brew install kube-ps1
brew install kubernetes-helm
brew tap wagoodman/dive
brew install dive       # explore docker container layers

brew install gnupg
brew install findutils  # GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed 
brew install rename
brew install tree
brew install fpp
brew install fzf
brew install ripgrep    
brew install fd         # enhanced find
brew install bat        # enhanced cat
brew install exa        # enhanced ls

# zsh plugins
brew install zsh-syntax-highlighting
brew install zsh-autosuggestions
brew install zsh-completions

brew tap caskroom/cask
brew cask install vlc
brew cask install google-chrome
brew cask install firefox
brew cask install dropbox
brew cask install slack
brew cask install telegram
brew cask install iterm2
brew cask install sequel-pro
brew cask install visual-studio-code

# Remove outdated versions from the cellar
brew cleanup

npm install -g pure-prompt
